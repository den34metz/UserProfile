
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DateCertModal</title>

    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/profileMain.js"></script>
    <link href="~/Content/bootstrap-spacelabV4.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <!-- MODAL FOR ADDING DATES AND CERTIFICATES -->
    <div id="modalWrapper">
            <div class="modal fade" id="dateTimeModal" tabindex="-1" role="dialog" aria-labelledby="dateTimeModalCenterTitle" aria-hidden="false">
                <div class="modal-dialog modal-dialog-top modal-lg" role="document">
                    <div class="modal-content" id="updateTrainingModalContent">

                        <div class="modal-header" id="modalHeader">Add Date & Cert</div>
                        <div class="modal-body">

                            <div class="row">
                                <div id="trainId" style="display: none">
                                    <div class="form-group">
                                        <label for="inputName"></label> <input type="text" class="form-control" id="txtTrainId" name="txtTrainId" />
                                    </div>
                                </div>

                                <div id="EDIPI" style="display: none">
                                    <div class="form-group">
                                        <label for="inputName"></label> <input type="text" class="form-control" id="txtEdipi" name="txtEdipi" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12" id="trainTitle">
                                    <div class="form-group">
                                        <textArea type="text" class="form-control" id="txtUpdateTrainTitle" name="txtUpdateTrainTitle" style="background:white" readonly></textArea>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group" id="datePickerFormGroup">
                                <label class="control-label">Date Taken: </label> <input type='text' class="datepicker" name="date" id="classDate" />
                            </div>
                        </div>

                        <div class="custom-file" id="fileupload">
                            <input type="file" onchange="showFile(this)" class="custom-file-input" id="inputGroupFile01"
                                   aria-describedby="inputGroupFileAddon01" name="file">
                            <label class="custom-file-label" for="inputGroupFile01">Upload Certificate</label>
                            <label name="errorFile" id="errorFile"></label>
                        </div>

                        <div class="row" id="btRow">
                            <button class="btn btn-primary" id="btClose" data-dismiss="modal" type"button"="">Close</button>
                            <button class="btn btn-primary" id="btSubmit" type="submit" value="Training Tracker" onclick="returnedData()" onsubmit="">Save</button>
                            <div id="errorMessage"></div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</body>
</html>
